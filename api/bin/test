#!/bin/sh

# TODO: This file is a stub for a larger test automation, e.g. using phing.

DIR="$( cd "$( dirname "$0" )" &> /dev/null && pwd )"

echo "Clear test MongoDB:"
echo "---"

"$DIR"/console doctrine:mongodb:schema:drop --env=test
"$DIR"/console doctrine:mongodb:schema:create --env=test

echo "PHPUnit:"
echo "---"

"$DIR"/phpunit

echo "PHP CS Fixer:"
echo "---"

$(dirname "$DIR")/vendor/bin/php-cs-fixer fix src -v --dry-run --stop-on-violation --using-cache=no
$(dirname "$DIR")/vendor/bin/php-cs-fixer fix tests -v --dry-run --stop-on-violation --using-cache=no
